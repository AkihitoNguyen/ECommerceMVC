@model ECommerceMVC.ViewModels.LoginVM

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <form asp-action="DangNhap" enctype="multipart/form-data" asp-route-returnURL="@ViewBag.ReturnUrl">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.LoginName" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.LoginName" type="text" class="form-control">
                        </div>

                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Password" type="text" class="form-control">
                        </div>
                        
                        <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                            <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Nhập</button>
                            <a asp-controller="KhachHang" asp-action="QuenMatKhau" class="border-danger">Quên Mật khẩu</a>
                        </div>
                    </div>
                    </div>
                    </div>
        </form>
    </div>
    </div>
  